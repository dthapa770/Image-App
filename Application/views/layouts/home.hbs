<body>

{{log this}}
{{> header}}
{{#if (emptyObject messages)}};
{{> flashmessage}}
{{/if}}
{{{body}}}
{{index}}
{{> footer}}


{{#if logged}}
    <script>
        let ele = document.getElementById('logout-button');
        if (ele) {
            ele.onclick = (even) => {
                fetch('/users/logout', {
                    method: "POST"
                })
                        .then((data) => {
                            location.replace('/');
                        })
            }
        }
    </script>
{{/if}}

</body>
